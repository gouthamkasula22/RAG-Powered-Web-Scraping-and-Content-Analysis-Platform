# Environment Configuration
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Streamlit Configuration
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# Scraping Configuration
SCRAPING_TIMEOUT=30
SCRAPING_MAX_RETRIES=3
SCRAPING_DELAY_BETWEEN_REQUESTS=1
SCRAPING_MAX_CONTENT_SIZE=1000000

# Security Configuration
ALLOWED_DOMAINS=
BLOCKED_DOMAINS=localhost,127.0.0.1,0.0.0.0,metadata.google.internal,169.254.169.254
MAX_URL_LENGTH=2048

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>

# Google Gemini Configuration (Free Tier)
GOOGLE_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Anthropic Claude Configuration (Premium Tier)
ANTHROPIC_API_KEY=your_anthropic_claude_api_key_here
CLAUDE_MODEL=claude-3-haiku-20240307

# Production LLM Service Configuration
LLM_PRIMARY_PROVIDER=gemini
LLM_PREMIUM_PROVIDER=claude
LLM_MAX_COST_PER_REQUEST=0.05
LLM_LARGE_CONTENT_THRESHOLD=20000
LLM_TIMEOUT_SECONDS=60
LLM_MAX_RETRY_ATTEMPTS=3
